<UserControl x:Class="FFXIV_TexTools.Views.EditableOptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFXIV_TexTools.Views"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="100">
    <Grid>
        <Label x:Name="OptionLabel" Grid.Row="0"></Label>
        <TextBox x:Name="OptionTextBox" Grid.Row="0" Visibility="Hidden"></TextBox>
    </Grid>
</UserControl>
