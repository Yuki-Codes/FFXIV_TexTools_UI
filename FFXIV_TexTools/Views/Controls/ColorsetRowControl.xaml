<UserControl x:Class="FFXIV_TexTools.Controls.ColorsetRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFXIV_TexTools.Controls"
             mc:Ignorable="d" 
             xmlns:resx="clr-namespace:FFXIV_TexTools.Resources"
             resx:Localization.Enabled="True"             
             d:DesignHeight="24" d:DesignWidth="160">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" ></ColumnDefinition>
            <ColumnDefinition Width="4*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Name="RowNumber" HorizontalContentAlignment="Right" Padding="0, 4, 2, 0" />
        <Image Grid.Column="1" Name="RowImage" HorizontalAlignment="Left" Margin="5, 0, 0, 0"/>
    </Grid>
</UserControl>
