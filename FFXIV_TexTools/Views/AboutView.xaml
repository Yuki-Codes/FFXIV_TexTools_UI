        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="/FFXIV_TexTools;component/Resources/ffxivmeteorlogo.png"/>
